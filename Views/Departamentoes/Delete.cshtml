@model TestJoin1.DataAccess.Departamento

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewBag.VistaAccionEliminar </h1>

<h3>@ViewBag.deseaDelete</h3>
<div>
    <h4>@ViewBag.Departamento</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@ViewBag.VistaAccionEliminar " class="btn btn-danger" /> |
        <a asp-action="Index">@ViewBag.BackToList</a>
    </form>
</div>
